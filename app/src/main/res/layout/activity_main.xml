<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/binar_challenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Binar Challenge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.421" />

    <Button
        android:id="@+id/tokopedia_activity_btn"
        app:layout_constraintTop_toBottomOf="@id/binar_challenge"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:text="@string/tokopedia"
        android:textAllCaps="false"
        android:backgroundTint="@color/green"
        />
    <Button
        android:id="@+id/gojek_activity_btn"
        app:layout_constraintTop_toBottomOf="@id/binar_challenge"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="16dp"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:text="@string/gojek"
        android:textAllCaps="false"
        android:backgroundTint="@color/green_gojek"
        />

</androidx.constraintlayout.widget.ConstraintLayout>